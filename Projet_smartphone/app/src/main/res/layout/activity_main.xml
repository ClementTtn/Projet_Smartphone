<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/main_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="48dp"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        android:text="@string/main_menu_title"
        android:textColor="@color/white"
        android:textSize="48dp"
        />

    <Button
        android:id="@+id/button_drone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/button_radius"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintTop_toBottomOf="@id/main_menu_title"
        android:text="@string/main_menu_button_drone"
        android:textSize="20sp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/button_trajectory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/button_radius"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintTop_toBottomOf="@id/button_drone"
        android:text="@string/main_menu_button_trajectory"
        android:textSize="20sp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/button_mytrajectory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/button_radius"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintTop_toBottomOf="@id/button_trajectory"
        android:text="@string/main_menu_button_mytrajectory"
        android:textSize="20sp"
        android:textAllCaps="false"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintTop_toBottomOf="@id/button_mytrajectory"
        android:src="@mipmap/ic_launcher"/>


</androidx.constraintlayout.widget.ConstraintLayout>